<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        >
    <!-- Title -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="Photos you had taken"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        />
    </LinearLayout>

    <!-- RecyclerView -->

    <!-- BottomAppBar -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCaptures"
        android:layout_width="match_parent"
        android:layout_height="977dp"
        android:layout_marginTop="75dp"
        android:paddingBottom="70dp" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="28dp"
        android:backgroundTint="#A60909"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"

            >

            <!-- Left Settings -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_button"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_preferences"
                app:backgroundTint="@color/link_text_color" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1" />

            <!-- Right Subscription -->
            <ImageButton
                android:id="@+id/btnSubscription"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_button"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_info_details"
                app:backgroundTint="@color/link_text_color" />

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- Center FAB floating above BottomAppBar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCamera"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:contentDescription="Camera"
        android:src="@android:drawable/ic_menu_camera"
        app:backgroundTint="@color/link_text_color"
        app:layout_anchor="@id/bottomBar"
        app:layout_anchorGravity="center" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>

